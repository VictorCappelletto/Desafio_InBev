# ==============================================================================
# EditorConfig - Consistent coding styles between different editors and IDEs
# ==============================================================================
# https://editorconfig.org

root = true

# ==============================================================================
# All files
# ==============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ==============================================================================
# Python files
# ==============================================================================
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black default

# ==============================================================================
# YAML files
# ==============================================================================
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ==============================================================================
# JSON files
# ==============================================================================
[*.json]
indent_style = space
indent_size = 2

# ==============================================================================
# Markdown files
# ==============================================================================
[*.md]
trim_trailing_whitespace = false  # Allow two spaces for line breaks
max_line_length = 100

# ==============================================================================
# Shell scripts
# ==============================================================================
[*.sh]
indent_style = space
indent_size = 2

# ==============================================================================
# Docker files
# ==============================================================================
[Dockerfile*]
indent_style = space
indent_size = 4

# ==============================================================================
# Configuration files
# ==============================================================================
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 4

# ==============================================================================
# Airflow DAGs
# ==============================================================================
[dags/**.py]
indent_style = space
indent_size = 4
max_line_length = 88

